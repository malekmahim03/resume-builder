<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= name %> - Resume</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 40px;
        color: #000;
        line-height: 1.6;
      }
      .header {
        text-align: center;
      }
      .header h1 {
        margin: 0;
        font-size: 28px;
        font-weight: bold;
      }
      .header p {
        margin: 4px 0;
        font-size: 14px;
      }
      .section {
        margin-top: 25px;
      }
      .section h2 {
        font-size: 18px;
        border-bottom: 1px solid #ccc;
        padding-bottom: 5px;
        margin-bottom: 10px;
      }
      .experience-item {
        margin-bottom: 20px;
      }
      .experience-title {
        display: flex;
        justify-content: space-between;
        font-weight: bold;
      }
      .experience-description {
        margin-top: 5px;
      }
      .project-title {
        font-weight: bold;
        margin-top: 10px;
      }
      .tech-stack {
        font-style: italic;
        font-size: 14px;
        margin-bottom: 10px;
      }
      ul {
        padding-left: 20px;
      }
      .skills-list {
        list-style: disc;
        columns: 2;
        -webkit-columns: 2;
        -moz-columns: 2;
      }
      .section-line {
        border: none;
        border-top: 1px solid #ccc;
        margin: 10px auto;
        width: 100%;
      }
      .skillclass{
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <h1><%= name %></h1>
      <% if (headline) { %>
      <p><%= headline %></p>
      <% } %><!-- This is the new line you want to add -->
      <hr class="section-line" />
      <p><%= email %> | <%= phone %> | <%= location %>
      <% if (linkedin) { %>
      <a href="<%= linkedin %>"><%= linkedin %></a></p>
      <% } %>
    </div>

    <div class="section">
      <h2>Professional Summary</h2>
      <p><%= summary %></p>
    </div>

    <div class="section">
      <h2>Skills</h2>
      <ul class="skills-list">
        <% skills.forEach(skill => { %>
        <li class="skillclass"><%= skill %></li>
        <% }) %>
      </ul>
    </div>

    <div class="section">
      <h2>Experience</h2>
      <% experience.forEach(exp => { %>
      <div class="experience-item">
        <div class="experience-title">
          <span><%= exp.title %> - <%= exp.company %></span>
          <span><%= exp.years %></span>
        </div>
        <p class="experience-description"><%= exp.description %></p>
        <% if (exp.projects && exp.projects.length) { %> <%
        exp.projects.forEach(project => { %>
        <p class="project-title">â€¢ <%= project.name %></p>
        <p><%= project.description %></p>
        <p class="tech-stack">Tech Stack: <%= project.techStack %></p>
        <% }) %> <% } %>
      </div>
      <% }) %>
    </div>

    <div class="section">
      <h2>Education</h2>
      <% education.forEach(edu => { %>
      <p>
        <strong><%= edu.degree %></strong> - <%= edu.institution %> (<%=
        edu.year %>) CGPA: <%=edu.cgpa%>
      </p>
      <% }) %>
    </div>
  </body>
</html>
